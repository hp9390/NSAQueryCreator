{% extends 'NSAQueryCreatorBundle:Default:layout.html.twig' %}
{% block requirejs %}
    {{ require_js_initialize() }}
    <script type="text/javascript">
        requirejs.config({
            "paths": {
                {% javascripts '@jquery' %}
                "jquery": "{{ asset_url | replace({ ('.js'): '' }) }}",
                {% endjavascripts %}
                {% javascripts '@modernizr' %}
                "modernizr": "{{ asset_url | replace({ ('.js'): '' }) }}",
                {% endjavascripts %}
                {% javascripts '@bootstrapJS' %}
                "bootstrap": "{{ asset_url | replace({ ('.js'): '' }) }}",
                {% endjavascripts %}
                {% javascripts '@bootstrapTooltipJS' %}
                "bootstrapTooltip": "{{ asset_url | replace({ ('.js'): '' }) }}",
                {% endjavascripts %}
                {% javascripts '@NSAQueryCreatorBundle/Resources/public/js/app.js' %}
                "app": "{{ asset_url | replace({ ('.js'): '' }) }}",
                {% endjavascripts %}
                {% javascripts '@NSAQueryCreatorBundle/Resources/public/js/jqueryManipulation.js' %}
                "jqueryManipulation": "{{ asset_url | replace({ ('.js'): '' }) }}",
                {% endjavascripts %}
                {% javascripts '@NSAQueryCreatorBundle/Resources/public/js/knockoutjsManipulation.js' %}
                "knockoutjsManipulation": "{{ asset_url | replace({ ('.js'): '' }) }}",
                {% endjavascripts %}
                {% javascripts '@NSAQueryCreatorBundle/Resources/public/js/ajaxCallNewQueries.js' %}
                "ajaxCallNewQueries": "{{ asset_url | replace({ ('.js'): '' }) }}",
                {% endjavascripts %}
                {% javascripts '@NSAQueryCreatorBundle/Resources/public/js/enableDetails.js' %}
                "enableDetails": "{{ asset_url | replace({ ('.js'): '' }) }}",
                {% endjavascripts %}
                {% javascripts '@NSAQueryCreatorBundle/Resources/public/js/vendors/keithamus/jwerty/jwerty.js' %}
                "jwerty": "{{ asset_url | replace({ ('.js'): '' }) }}",
                {% endjavascripts %}
                {% javascripts '@NSAQueryCreatorBundle/Resources/public/js/keyCode.js' %}
                "keyCode": "{{ asset_url | replace({ ('.js'): '' }) }}",
                {% endjavascripts %}
                'underscore': '//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.6.0/underscore-min',
                "knockoutjs": "//cdnjs.cloudflare.com/ajax/libs/knockout/3.0.0/knockout-min"
            }});
    </script>
    <script type="text/javascript">
        require(['app'], function () {
            var c = document.getElementById("fadeMeLoadingOverlay");
            c.parentNode.removeChild(c);
        });
    </script>
{% endblock requirejs %}
