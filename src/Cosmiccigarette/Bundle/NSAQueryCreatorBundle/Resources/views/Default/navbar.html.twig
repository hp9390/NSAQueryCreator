        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ url('nsa_query_creator_homepage') }}">{{ name }}</a>
                {{ knp_menu_render('NSAQueryCreatorBundle:Builder:mainMenu', {'currentClass': 'active'}) }}
            </div>
            <div class="navbar-collapse collapse">
                <form class="navbar-form navbar-right">
